<%= render "shared/header" %>
<div class='main'>
  <div class="blog_body">
    <div class="content_memo">
      <div class="image_content">
        <% if @memo.memo_image == "" %>
          <%= image_tag"tasyumi_kiyoubinbou.png", class:"index_image" %>
        <% else%>  
          <img src="<%= @memo.memo_image %>" alt="" class="index_image">
        <%end%>
      </div>
      <div class="blog_header">
        <p><%= @memo.memo_title %></p>
        <% if user_signed_in? && current_user.id == @memo.user_id %>
          <div class="more">
            <ul class="more_list">
              <li>
                <%= link_to '編集', edit_favorite_memo_path(@memo.id), method: :get %>
              </li>
              <li>
                <%= link_to '削除', favorite_memo_path(@memo.id), method: :delete %>
              </li>
            </ul>
          </div>
        <% end %>
      </div>
      <p><%= safe_join(@memo.memo_text.split("\n"),tag(:br)) %></p>
      <div class="day"><%= l @memo.created_at %></div>
    </div>
  </div>
</div>
<%= render "shared/footer" %>