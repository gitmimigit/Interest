<%= render "shared/header" %>
<div class='main'>
  <div class='title-contents'>
    <h2 class='service-title'>
      呪術廻戦、休載だった・・・
    </h2>
    <p class='service-explain'>
      鹿紫雲って性別どっちなの？？
    </p>
  </div>
  <div class="plaza_body">
    <div class="plaza_content">
      <div class="new_content">New Blog</div>
      <% @blogs.each do |blog| %>
        <div class="index_blog">
          <div class="image_content">
            <% if blog.blog_image == "" %>
              <%= image_tag"tasyumi_kiyoubinbou.png", class:"plaza_image" %>
            <% else%>  
              <img src="<%= blog.blog_image %>" alt="" class="plaza_image">
            <%end%>
          </div>
          <div class="plaza_blog">
            <p><%= link_to blog.blog_title, blog_path(blog.id), class: "index_title" %></p>
            <p>by.<%= link_to blog.user.user_name, user_path(blog.user.id), class: "index_user" %></p>
          </div>
        </div>
      <% end %>
    </div>
    <div class='plaza_content'>
      <div class="new_content">New Favorite</div>
      <% @favorites.each do |favorite| %>
        <div class="index_favorite">
          <div class="image_content">
            <img src="<%= favorite.favorite_image %>" alt="" class=plaza_image>
          </div>
          <div class="plaza_favorite">
          <p><%= link_to favorite.favorite_name, favorite_path(favorite.id), class: "index_name" %></p>
          <p>by.<%= link_to favorite.user.user_name, user_path(favorite.user.id), class: "index_user" %></p>
          </div>
        </div>
      <% end %>
    </div>
    <div class="plaza_content">
      <div class="chart_title">
      Blog's Category
      </div>
      <div class="plaza_chart">
        <%= pie_chart @blogs_category%>
      </div>
      <div class="chart_title">
      Favorite's Category
      </div>
      <div class="plaza_chart">
        <%= pie_chart @favorite_categories%>
      </div>
    </div>
  </div>
<div>
<%= render "shared/footer" %>